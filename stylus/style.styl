.top-panel{
    background-color: #EBF0FA;
    h3 {
        margin-bottom: 10px;
    }
    img {
        height: 15%;
        padding: 5px;
    }
}

@media screen and (max-width: 990px) {
    .top-panel{
        background-color: #EBF0FA;
        h3 {
            margin-bottom: 10px;
            display:none;
        }
        img {
            height: 10%;
            padding: 1px;
        }
    }
}    
