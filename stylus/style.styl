.top-panel{
    background-color: #EBF0FA;
    h1 {
        margin-bottom: 10px;
    }
    img {
        height: 15%;
        padding: 5px;
    }
}

@media screen and (max-width: 768px) {
    .top-panel{
        background-color: #EBF0FA;
        h1 {
            font-size:14px;
            margin-bottom: 10px;
        }
        img {
            height: 10%;
            padding: 1px;
        }
    }
}    
