.panel-1 {
    position: relative;
    background-color: #14252D;
    z-index: -1;
    h1 {
        margin-top: 350px;
        text-align: left;
        color: #EBF0FA;
        padding: 20px;
        margin-bottom: 60px;
    }
    h2{
        text-align: left;
        color: #EBF0FA;
        padding: 10px;
        margin-left:10px;
    }
}

@media screen and (max-width: 768px) {
    .panel-1 {
        position: relative;
        background-color: #14252D;
        z-index: -1;
        h1 {
            font-size: 22px;
            margin-top: 20px;
            text-align: left;
            color: #EBF0FA;
            padding: 1px;
            margin-left: 3px;
            margin-bottom: 1px;
        }
        h2{
            font-size: 14px;
            text-align: left;
            color: #EBF0FA;
            margin-left: 4px;
            padding: 0px;
        }
    }
}
.panel-2{
    position: relative;
    background-color: #EBF0FA;
    h1{
        text-align: center;
        padding: 60px;   
    }
    h2{
        text-align: center;
        padding: 20px;
    }
    p{
        text-align: center;
        margin-bottom: 80px;
    }
    ul{
        text-align: center;
    }
    .p2-logo{
        display:block;
        margin-right: auto;
        margin-left: auto;
        height: 100px;
    }
}

.panel-3{
    position: relative;
    background-color: #0A0B0F;
    z-index: -1;
    h1{
        padding: 20px;
        margin-top: 380px;
        text-align: center;
        color: white;
        border: 7px solid #008cba; 
    }
}

@media screen and (max-width: 768px){
    .panel-3 {
        position: relative;
        background-color: #0A0B0F;
        z-index: -1;
        h1{
            width: 200px;
            margin: 0 auto;
            font-size:24px;
            padding: 2px;
            margin-top: 120px;
            text-align: center;
            color: white;
            border: 4px solid #008cba; 
        }
    }
}

.bottom-panel{
    position: relative;
    background-color: #00334C;
    h1, h5{
        text-align: center;
        color: #EBF0FA;
    }
    h5 {
        padding: 25px;
        color: #EBF0FA;
    }
}

.back {
    position: absolute;
    width: 100%;
    z-index: -1;
}
